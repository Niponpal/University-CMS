@model Seller

@{
    ViewData["Title"] = "Register Seller";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Header -->
            <div class="text-center mb-5">
                <h2 class="fw-bold text-primary mb-3">
                    <i class="fas fa-user-tie me-2"></i>Seller Registration
                </h2>
                <p class="text-muted">Enter seller details to register</p>
            </div>

            <!-- Form Card -->
            <div class="card shadow border-0">
                <div class="card-body p-4">
                    <form asp-action="CreateOrEdit" method="post">
                        <div class="row">
                            <!-- Full Name -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Full Name</label>
                                <input asp-for="FullName" class="form-control" placeholder="Full name" />
                            </div>

                            <!-- Email -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email Address</label>
                                <input asp-for="Email" class="form-control" placeholder="Email address" />
                            </div>

                            <!-- Phone -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Phone Number</label>
                                <input asp-for="Phone" class="form-control" placeholder="Phone number" />
                            </div>

                            <!-- Join Date -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Join Date</label>
                                <input asp-for="JoinDate" class="form-control" type="date" />
                            </div>

                            <!-- Address -->
                            <div class="col-12 mb-4">
                                <label class="form-label">Address</label>
                                <textarea asp-for="Address" class="form-control" rows="3" placeholder="Full address"></textarea>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check me-1"></i>Register
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        border: 1px solid #e9ecef;
    }

    .form-control {
        border-radius: 6px;
        border: 1px solid #ced4da;
        padding: 10px 12px;
    }

        .form-control:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.1);
        }

    .btn-primary {
        padding: 8px 25px;
        border-radius: 6px;
    }

    .btn-outline-secondary {
        padding: 8px 20px;
        border-radius: 6px;
    }
</style>










