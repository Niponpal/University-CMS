@{
    ViewData["Title"] = "Contact Us";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
    .contact-header {
        background: linear-gradient(135deg, #0d6efd 0%, #6610f2 100%);
        padding: 80px 0;
        color: #fff;
        text-align: center;
    }

        .contact-header h1 {
            font-size: 48px;
            font-weight: 700;
        }

        .contact-header p {
            font-size: 18px;
            opacity: .9;
            max-width: 700px;
            margin: auto;
        }

    .contact-container {
        margin-top: -50px;
        position: relative;
        z-index: 10;
    }

    .contact-card {
        border-radius: 12px;
        box-shadow: 0 10px 35px rgba(0, 0, 0, .1);
        overflow: hidden;
    }

    .contact-info {
        background: #f8f9fa;
        padding: 40px;
    }

        .contact-info .icon-box {
            width: 55px;
            height: 55px;
            border-radius: 50%;
            background: #e9ecef;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 25px;
            color: #0d6efd;
            margin-right: 15px;
        }

    .social-icons a {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        background: #0d6efd;
        color: #fff;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-right: 10px;
        font-size: 20px;
        text-decoration: none;
        transition: 0.3s;
    }

        .social-icons a:hover {
            background: #6610f2;
        }

    .form-control:focus {
        box-shadow: none;
        border-color: #0d6efd;
    }
</style>

<!-- TOP HERO SECTION -->
<div class="contact-header">
    <h1>Let’s Start a Conversation</h1>
    <p>We are here to listen, support, and collaborate with you. Reach out anytime — we respond fast.</p>
</div>

<!-- CONTACT BODY -->
<div class="container contact-container">
    <div class="row contact-card bg-white">

        <!-- LEFT - FORM -->
        <div class="col-lg-7 p-5">
            <h3 class="mb-4">Send Us a Message</h3>

            <form>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Your Name</label>
                        <input type="text" class="form-control" placeholder="John Doe" required>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" placeholder="name@example.com" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Subject</label>
                    <input type="text" class="form-control" placeholder="Message topic..." required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Your Message</label>
                    <textarea class="form-control" rows="5" placeholder="Write your message..." required></textarea>
                </div>

                <button class="btn btn-primary px-4 py-2">
                    <i class="bi bi-send"></i> Send Message
                </button>
            </form>
        </div>

        <!-- RIGHT - CONTACT INFO -->
        <div class="col-lg-5 contact-info">
            <h4 class="mb-4">Contact Information</h4>

            <div class="d-flex mb-4">
                <div class="icon-box"><i class="bi bi-telephone"></i></div>
                <div>
                    <h6 class="mb-1">Phone</h6>
                    <p class="mb-0">+880 1234 567 890</p>
                </div>
            </div>

            <div class="d-flex mb-4">
                <div class="icon-box"><i class="bi bi-envelope"></i></div>
                <div>
                    <h6 class="mb-1">Email</h6>
                    <p class="mb-0">info@example.com</p>
                </div>
            </div>

            <div class="d-flex mb-4">
                <div class="icon-box"><i class="bi bi-geo-alt"></i></div>
                <div>
                    <h6 class="mb-1">Office Location</h6>
                    <p class="mb-0">Crystal Vision Solution, Dhaka, Bangladesh</p>
                </div>
            </div>

            <hr>

            <h6 class="mb-3">Follow Us</h6>
            <div class="social-icons">
                <a href="#"><i class="bi bi-facebook"></i></a>
                <a href="#"><i class="bi bi-whatsapp"></i></a>
                <a href="#"><i class="bi bi-linkedin"></i></a>
                <a href="#"><i class="bi bi-github"></i></a>
            </div>

        </div>
    </div>
</div>
