            color: white;
            font-weight: 600;
            box-shadow: 0 4px 15px rgba(0, 124, 137, 0.2);
        }

        .nav-pills .nav-link i {
            font-size: 1.1rem;
            width: 24px;
        }

    .privacy-main {
        padding: 3rem;
    }

    .section-header {
        margin-bottom: 3rem;
        padding-bottom: 1.5rem;
        border-bottom: 2px solid var(--gray-200);
    }

        .section-header h2 {
            color: var(--text-dark);
            font-weight: 700;
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .section-header p {
            color: var(--text-muted);
            font-size: 1.1rem;
            margin: 0;
        }

    .policy-section {
        margin-bottom: 3rem;
        padding: 2rem;
        background: var(--gray-100);
        border-radius: 15px;
        border-left: 4px solid var(--primary-teal);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .policy-section:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        .policy-section h3 {
            color: var(--primary-teal);
            font-weight: 600;
            font-size: 1.5rem;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

            .policy-section h3 i {
                font-size: 1.2rem;
            }

    .policy-content {
        color: var(--text-dark);
        line-height: 1.8;
    }

        .policy-content p {
            margin-bottom: 1.5rem;
        }

        .policy-content ul, .policy-content ol {
            margin-bottom: 1.5rem;
            padding-left: 1.5rem;
        }

        .policy-content li {
            margin-bottom: 0.75rem;
            position: relative;
        }

        .policy-content strong {
            color: var(--primary-teal-dark);
            font-weight: 600;
        }

    .contact-card {
        background: linear-gradient(135deg, var(--primary-teal), var(--primary-teal-dark));
        color: white;
        padding: 2.5rem;
        border-radius: 15px;
        text-align: center;
        margin-top: 3rem;
    }

        .contact-card h3 {
            font-weight: 600;
            margin-bottom: 1.5rem;
            font-size: 1.75rem;
        }

    .contact-info {
        display: flex;
        justify-content: center;
        gap: 2rem;
        flex-wrap: wrap;
    }

    .contact-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }

        .contact-item i {
            font-size: 1.5rem;
            background: rgba(255, 255, 255, 0.15);
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin-bottom: 0.5rem;
        }

        .contact-item span {
            font-weight: 500;
        }

        .contact-item a {
            color: white;
            text-decoration: none;
            transition: opacity 0.2s ease;
        }

            .contact-item a:hover {
                opacity: 0.9;
                text-decoration: underline;
            }

    /* Back to top button */
    .back-to-top {
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        background: var(--primary-teal);
        color: white;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        box-shadow: 0 4px 15px rgba(0, 124, 137, 0.3);
        transition: all 0.3s ease;
        opacity: 0;
        visibility: hidden;
        z-index: 1000;
    }

        .back-to-top.show {
            opacity: 1;
            visibility: visible;
        }

        .back-to-top:hover {
            background: var(--primary-teal-dark);
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(0, 124, 137, 0.4);
        }

    /* Animations */
    .policy-section {
        animation: fadeInUp 0.6s ease-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }


</style>

