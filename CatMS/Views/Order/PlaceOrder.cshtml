@model CatMS.Models.Order

@{
    ViewData["Title"] = "Place Order";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow rounded-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Place Order</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="ConfirmOrder" asp-controller="Order" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Hidden Fields -->
                        <input type="hidden" asp-for="CatId" />
                        <input type="hidden" asp-for="BuyerId" />

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Phone -->
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label fw-bold"></label>
                            <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <!-- Address -->
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-bold"></label>
                            <textarea asp-for="Address" class="form-control" rows="3"
                                      placeholder="Enter delivery address"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <!-- Total Amount -->
                        <div class="mb-3">
                            <label asp-for="TotalAmount" class="form-label fw-bold"></label>
                            <input asp-for="TotalAmount" class="form-control" readonly />
                        </div>

                        <!-- Submit -->
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-check-circle me-2"></i>Confirm Order
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
